{
    "name": "phst/xslt-bundle",
    "type": "symfony-bundle",
    "description": "Adds XSLT support to symfony",
    "keywords": ["templating", "xslt", "symfony"],
    "homepage": "https://github.com/philippstucki/PHSTXsltBundle",
    "license": "APACHE-2.0",
    "authors": [
        {
            "name": "Philipp Stucki",
            "email": "ps@stuckistucki.com",
            "homepage": "https://github.com/philippstucki/PHSTXsltBundle"
        },
        {
            "name": "Community contributions",
            "homepage": "https://github.com/philippstucki/PHSTXsltBundle/contributors"
        }
    ],
    "support": {
        "issues": "https://github.com/philippstucki/PHSTXsltBundle/issues"
    },
    "require": {
        "php": ">=5.3.3",
        "jms/serializer": "~0.11",
        "symfony/framework-bundle": "~2.2"
    },
    "require-dev": {
        "symfony/assetic-bundle": "~2.1"
    },
    "suggest": {
        "symfony/assetic-bundle": "Assetic support in XSLT templates"
    },
    "autoload": {
        "psr-0": { "PHST\\Bundle\\XsltBundle": "" }
    },
    "minimum-stability": "alpha",
    "target-dir": "PHST/Bundle/XsltBundle"
}
